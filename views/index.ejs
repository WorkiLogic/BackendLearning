<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Your Work!</title>
    <style>
        .logout{
            width: 2rem;
            filter: invert(1);
            cursor: pointer;
        }
        .logout:hover{
            filter: invert(0.8);
        }
    </style>
</head>

<body class="bg-dark text-white">
 
    <form action="/addtask" method="post">
        <div class="container d-flex justify-content-center align-items-center gap-2">
            <input type="text" name="todo_name" class="form-control w-50 my-4 " placeholder="Todo" aria-label="Username" aria-describedby="basic-addon1" required>
            <div class="d-flex justify-content-center align-items-center gap-4">
            <button type="submit" class="btn btn-primary">Add</button>
            <div>
                <img src="logout.png" onclick="confirmLogout()" class="logout ml-4" alt="">
            </div>
        </div>
        </div>
    </form>
    <div class="container d-flex justify-content-center align-items-center gap-3">
        <button type="submit" class="btn btn-danger px-1" onclick="confirmDelete()">Delete-All</button>
    </div>
    <div class="d-flex mt-4 justify-content-center align-items-center">
        <h1>Todos</h1>
    </div>
    <div class="container">
        <table class="table bg-dark text-white">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Todos</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% todos.forEach(function(todo,index) { %>
                    <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td class="todos">
                            <%= todo.todo %>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-danger px-2"><a href="/deletetask/<%= todo.id %>" style="text-decoration: none;" class="text-white">Delete</a></button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
        <script>
            function confirmDelete() {
                let answer = confirm("Are you sure you want to delete all your todos?");
                if (answer) {
                    window.location.href = "/deleteall";
                }
            }
            function confirmLogout() {
                let answer = confirm("Are you sure you want to Logout?");
                if (answer) {
                    window.location.href = "/logout";
                }
            }
       
        </script>

</body>

</html>